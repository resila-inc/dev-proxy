{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}",
    "requireBranch": "main",
    "requireCleanWorkingDir": true,
    "push": true,
    "pushArgs": ["--follow-tags"]
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": false
  },
  "hooks": {
    "before:init": ["pnpm lint", "pnpm test"]
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md",
      "addUnreleased": true
    }
  }
}
